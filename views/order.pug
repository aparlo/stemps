div(class="uk-offcanvas-content")
  //The whole page content goes here
  
  //This is a button toggling the off-canvas
  button(class="uk-button uk-button-primary uk-button-large" style="margin-top:-250px;" uk-toggle="target: #order" type="button") Заказать
  
  //This is an anchor toggling the off-canvas
  a(href="#order" uk-toggle)
  
  //This is the off-canvas
  div(id="order" uk-offcanvas)
   div(class="uk-offcanvas-bar")
     button(class="uk-offcanvas-close" type="button" uk-close)
     form(class="uk-form-stacked" action="/upload" method="post")
      fieldset.uk-fieldset
        legend.uk-legend Контактная информация
        div(class="uk-margin" uk-margin)
          input(class="uk-input uk-margin-right uk-first-column" type="text" placeholder="Имя" name="FirstName")
          input(class="uk-input" type="text" placeholder="Фамилия" name="LastName")
        div(class="uk-margin" uk-margin)
          input(class="uk-input uk-form-width-medium" type="text" placeholder="Телефон" name="Phone")
        div(class="uk-margin" uk-margin)
          input(class="uk-input uk-form-width-medium" type="text" placeholder="Эл. почта" name="Email")
      fieldset.uk-fieldset
          legend.uk-legend Информация о заказе
          div(class="uk-margin" uk-margin)
            span.uk-form-label Остнастка
            <label><input class="uk-radio" type="radio" name="ostnaska-type" value="1" checked> Ручная</label></br>
            <label><input class="uk-radio" type="radio" name="ostnaska-type" value="2"> Автоматическая</label>
            button(class="uk-button uk-button-default" uk-toggle="target: #designs" type="button") Варианты дизайна
            button(class="uk-button uk-button-primary" uk-toggle="target: #files" type="button") Разработать дизайн
          div#files.uk-margin(hidden)
            input(type="file" multiple="multiple")
            button(class="uk-button uk-button-default" type="submit" value="Submit") Submit
